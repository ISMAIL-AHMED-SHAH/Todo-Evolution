# Root .env.example - Copy to .env and fill in your values

# ========================================
# PostgreSQL Database Configuration
# ========================================
POSTGRES_USER=todouser
POSTGRES_PASSWORD=todopassword
POSTGRES_DB=todo_db

# Full database URL (for backend)
DATABASE_URL=postgresql://todouser:todopassword@localhost:5432/todo_db

# For production with Neon:
# DATABASE_URL=postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# ========================================
# Authentication & Security
# ========================================
# CRITICAL: Change this in production! Use a strong random secret
BETTER_AUTH_SECRET=your-secret-key-change-in-production-use-32-chars-minimum

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================
# Frontend Environment Variables
# ========================================
# API URL (points to backend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Node environment
NODE_ENV=development

# ========================================
# Backend Environment Variables
# ========================================
# Application environment
ENVIRONMENT=development

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ========================================
# Optional: Email Configuration (for future use)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourapp.com

# ========================================
# Optional: Monitoring & Logging
# ========================================
# LOG_LEVEL=INFO
# SENTRY_DSN=your-sentry-dsn

# ========================================
# Development Tools
# ========================================
# Enable debug mode (development only)
DEBUG=true
