# Backend .env.example - Copy to .env and fill in your values

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://todouser:todopassword@localhost:5432/todo_db

# For production with Neon:
# DATABASE_URL=postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# ========================================
# Authentication & Security
# ========================================
BETTER_AUTH_SECRET=your-secret-key-change-in-production-use-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================
# Application Configuration
# ========================================
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
DEBUG=true
